@model IEnumerable<WebApplication3.Models.Camera>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section usage{
    <link href="~/css/uniform.default.css" rel="stylesheet" />
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Etaj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrPaturi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrMobilier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCaminNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Etaj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NrPaturi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NrMobilier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCaminNavigation.Adresa)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCamera">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdCamera">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCamera">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
